{
	"appId": "com.energypatrikhu.voice-to-text-beta",
	"productName": "Voice To Text Beta",
	"compression": "maximum",
	"directories": {
		"output": "dist"
	},
	"win": {
		"target": "nsis",
		"requestedExecutionLevel": "requireAdministrator"
	},
	"nsis": {
		"createDesktopShortcut": true,
		"oneClick": false,
		"allowElevation": true,
		"allowToChangeInstallationDirectory": true,
		"perMachine": true,
		"menuCategory": "EnergyPatrikHU"
	},
	"files": [
		"resources/app/**/*.cjs",
		{
			"from": "build",
			"to": ""
		}
	],
	"extraResources": [
		{
			"from": "./resources/extraResources/",
			"to": "",
			"filter": ["**/*"]
		}
	]
}

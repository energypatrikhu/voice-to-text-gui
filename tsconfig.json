{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "node",
    "strict": true,
    "types": ["vite/client", "node", "@types/dom-speech-recognition"],
    "typeRoots": ["node_modules/@types"],
    "lib": ["ESNext", "DOM"],
    "isolatedModules": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.svelte",
    "src/**/*.cjs",
    "src/**/*.js"
  ]
}
